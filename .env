# =============================================================================
# YGB Environment Configuration
# =============================================================================
# Copy this file to .env and fill in real values.
# NEVER commit .env with real secrets.

# Database â€” SQLite on HDD for persistence
DATABASE_URL=sqlite:///D:/ygb_data/ygb.db

# JWT Authentication
JWT_SECRET=REPLACE_ME_WITH_64_CHAR_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# SMTP Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
