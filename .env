LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_SECONDS=60

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Training Telemetry
YGB_HMAC_SECRET=REPLACE_ME_WITH_HMAC_SECRET
